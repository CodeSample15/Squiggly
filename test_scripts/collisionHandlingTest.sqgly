:VARS: {
    OBJECT player
    OBJECT test
}

:START: {
    test.x = $SCREEN_WIDTH / 2
    test.y = $SCREEN_HEIGHT / 2
    test.width = 20
    test.height = 50
    test.setSolid(false)
    test.setColor(255, 0, 0)

    player.x = test.x - 20
    player.y = test.y - 20
    player.width = 20
    player.height = 10
    player.setSolid(false)
    player.setColor(20, 200, 60)

    player.addWall(test, true)
}

:UPDATE: {
    player.move($JOYSTICK_X * 2, -$JOYSTICK_Y * 2, true)

    #player.testCollision(test)

    if($COL_FLAG) {
        test.setColor(0, 255, 0)
    } else {
        test.setColor(255, 0, 0)
    }

    if($A_BTN) {
        player.rotation -= 5
    }

    if($B_BTN) {
        player.rotation += 5
    }

    player.draw()
    test.draw()
}